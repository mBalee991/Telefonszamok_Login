<Window x:Class="Telefonszamok.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Telefonszám nyilvántartó" Height="450" Width="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Fájl">
                <MenuItem Header="Mentés" Click="miMentes_Click"/>
                <Separator/>
                <MenuItem Header="Kilépés" Click="miKilepes_Click"/>
            </MenuItem>

            <MenuItem Header="Lekérdezés">
                <MenuItem Header="Minden adat" Click="miMindenAdat_Click"/>
                <MenuItem Header="Helységek" Click="miHelyseg_Click"/>
            </MenuItem>

            <MenuItem Header="Adatfelvitel/Módosítás">
                <MenuItem Header="Helységek" Click="miHelysegekAM_Click"/>
            </MenuItem>
        </Menu>

        <Grid Grid.Row="1">

            <DataGrid x:Name="grRacs"
                      AutoGenerateColumns="False"
                      Visibility="Hidden"
                      Margin="10"/>

            <Grid x:Name="grHelyseg"
                  Visibility="Hidden"
                  Margin="20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0"
                       Content="Keresés irányítószám alapján:" />
                <ComboBox x:Name="cbIrsz"
                          Grid.Row="0" Grid.Column="1"
                          DisplayMemberPath="IRSZ"
                          Margin="5"
                          SelectionChanged="cbIrsz_SelectionChanged"/>

                <Label Grid.Row="1" Grid.Column="0"
                       Content="Keresés helységnév alapján:" />
                <ComboBox x:Name="cbHelysegnev"
                          Grid.Row="1" Grid.Column="1"
                          DisplayMemberPath="Nev"
                          Margin="5"
                          SelectionChanged="cbHelysegnev_SelectionChanged"/>

                <Label Grid.Row="2" Grid.Column="0"
                       Content="Irányítószám:" />
                <TextBox x:Name="tbIrsz"
                         Grid.Row="2" Grid.Column="1"
                         Margin="5"/>

                <Label Grid.Row="3" Grid.Column="0"
                       Content="Helységnév:" />
                <TextBox x:Name="tbHelysegnev"
                         Grid.Row="3" Grid.Column="1"
                         Margin="5"/>

                <StackPanel Grid.Row="4" Grid.ColumnSpan="2"
                            Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,30,0,0">
                    <Button x:Name="btRogzit"
                            Content="Módosított adatpár rögzítése"
                            Margin="10"
                            Click="btRogzit_Click"/>
                    <Button x:Name="btUjHelyseg"
                            Content="Új helység"
                            Margin="10"
                            Click="btUjHelyseg_Click"/>
                    <Button x:Name="btVissza"
                            Content="Vissza"
                            Margin="10"
                            Click="btVissza_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
